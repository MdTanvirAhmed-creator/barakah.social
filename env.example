# Barakah.Social Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# Application URL
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Supabase Configuration
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# Analytics (Optional)
# ============================================
# Plausible Analytics (privacy-friendly)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=barakah.social

# Google Analytics (if needed)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# Error Tracking (Optional)
# ============================================
# Sentry DSN
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================
# Feature Flags (Optional)
# ============================================
# NEXT_PUBLIC_ENABLE_DEBATES=true
# NEXT_PUBLIC_ENABLE_KNOWLEDGE_LIBRARY=true
# NEXT_PUBLIC_ENABLE_ISLAMIC_TOOLS=true

# ============================================
# API Keys (Optional)
# ============================================
# OpenAI for content moderation
# OPENAI_API_KEY=sk-xxx

# Uploadthing for file uploads (alternative to Supabase Storage)
# UPLOADTHING_SECRET=sk_xxx
# UPLOADTHING_APP_ID=xxx

# ============================================
# Email (Optional)
# ============================================
# Resend for transactional emails
# RESEND_API_KEY=re_xxx

# ============================================
# Social OAuth (Optional)
# ============================================
# Google OAuth (already configured in Supabase)
# GOOGLE_CLIENT_ID=xxx
# GOOGLE_CLIENT_SECRET=xxx

# ============================================
# Environment Info
# ============================================
NODE_ENV=development
# NODE_ENV=production (for production)

